// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http//visionmedia.github.com/nib/
@import 'nib'

gutter = 30px
base-font-size = 24px
dimmed = #444444
widgetheader = #454545

//Acts as a Dictionary for color usuage in the dashboard
information = #326793
good-indicator = #367229
not-good-indicator = #893333

// Apply a natural box layout model to all elements.
// http//paulirish.com/2012/box-sizing-border-box-ftw/
*
  box-sizing border-box

@font-face
  font-family 'Roboto Condensed'
  font-style normal
  font-weight 400
  src local('Roboto Condensed Regular'), local('RobotoCondensed-Regular'), url('../../fonts/roboto-condensed.woff') format('woff')

body
  background-color #A1B5B5
  background url('../images/bg-noise.png') left top repeat, linear-gradient(mix(#3B9295, white, 50%) , white, white, mix(#3B9295, white, 50%) ), mix(#3B9295, white, 25%) 
  font-family 'Roboto Condensed'
  overflow hidden

.uppercase
    text-transform uppercase

.icon-message
    display table
    height 100%
    width 100%
    .container
        display table-cell
        vertical-align middle
        img
            margin 0 auto
            display block
            width 60px

.site-header
  height 60px
  background-color white
  padding 7px
  border-bottom 2px solid black
  box-shadow 0 0 7px #666

  h1
    background-image url('../images/StatusBoardLogo.png')
    background-repeat no-repeat
    display inline-block
    float left
    margin 0
    padding-left 175px
    font-size 21pt
    height 40px
  
  .dlp-logo
    background-image url('../images/dlp-logo.png')
    background-repeat no-repeat
    display inline-block
    width 170px
    height 41px
    float right

.page-header
  height 50px
  background-color #3B9295
  padding 10px 25px 0 25px
  box-shadow 0 0 7px #444
  h2
    margin 
    float left
    display inline
  span
    font-size 18pt
    float right
    font-weight bold
    a:hover
      color white    

.error.icon-message > .container > img
    opacity .4

#disconnected
  display none
  background: #f00
  border-radius 5px
  color #fff
  padding 10px
  font-size 20px
  position absolute
  width 40%
  margin auto
  left 5%
  top 5%
  z-index 1000

#main-container
  width 1860px
  height 1080px
  padding (gutter/2)
  transform-origin 0 0
  margin 60 auto 0

  &.disconnected
    opacity .3

  #dashboard-list
    width 100%
    ul
        list-style none
        padding 0
    li
        background #e6e6e6
        color #000
        padding (gutter / 2)
        margin (gutter / 2)
        border-radius (gutter / 8)
        box-shadow 0 0 5px #444
        overflow hidden
        float left
        width 23%
        font-size 2em
        a
            text-decoration none
            color #000
            text-transform uppercase

  #widgets-container

      clear both

      & > ul
          list-style none
          padding 0

          & > li
            background #e6e6e6
            color #000
            padding (gutter / 2)
            //border-radius (gutter / 8)
            box-shadow 0 0 7px #444
            overflow hidden

            &.editing
               z-index 32767
               box-shadow 0 0 15px #333

            &:hover .edit
                display block

            .content
              &.offline, &.onerror
                opacity 0.2

            .edit
                display none
                width 20px
                height 20px
                position absolute
                top (gutter/2)
                right  (gutter/2)
                border none
                text-indent -9999px
                background transparent no-repeat unquote('url(dataimage/pngbase64,)')

      &.loading
         color #333

        h2
            font-size base-font-size
            // Stylus is trying to be damn too clever.
            margin-top 0
            margin-left -(gutter/2)
            margin-right -(gutter/2)
            margin-bottom (gutter/2)
            padding 0 (gutter/2) 0 (gutter/2)
            text-transform uppercase
            color black
            line-height 90%
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap

big
     color #fff
     font-size base-font-size * 2
     font-weight bold

.error
  color red
  font-size base-font-size

.error-display
    display none
    padding-left 20px
    padding-bottom 3px

.error-display.show
    display inline !important

.widget-title span.alert
  text-transform lowercase
  font-size 80%
  opacity 0.8


.widget-title span.alert_low
  color yellow

.widget-container
  width 100%

.widget-title span.alert_high
  color red

