@font-face
  font-family 'fontello'
  font-style normal
  font-weight 400
  src url('../../fonts/fontello.eot')
  src url('../../fonts/fontello.eot?#iefix') format('embedded-opentype')
      url('../../fonts/fontello.woff') format('woff')
      url('../../fonts/fontello.ttf') format('truetype')
      url('../../fonts/fontello.svg#fontello') format('svg')

body
  background-color #A1B5B5
  background url('../images/bg-noise.png') left top repeat, linear-gradient(mix(#3B9295, white, 50%) , white, white, mix(#3B9295, white, 50%) ), mix(#3B9295, white, 25%) 
  font-family 'Karla'
  overflow hidden

  a:hover
    text-decoration none  

.uppercase
    text-transform uppercase

.information
  color information

.good-indicator
  color good-indicator

.not-good-indicator
  color not-good-indicator

.icon-message
    display table
    height 100%
    width 100%
    .container
        display table-cell
        vertical-align middle
        img
            margin 0 auto
            display block
            width 60px

.site-header
  height 60px
  background-color white
  padding 7px
  border-bottom 2px solid #3B9295
  box-shadow 0 0 7px #666

  h1
    background-image url('../images/StatusBoardLogo.png')
    background-repeat no-repeat
    display inline-block
    float left
    margin 0
    padding-left 175px
    font-size 21pt
    height 40px
  
  .dlp-logo
    background-image url('../images/dlp-logo.png')
    background-repeat no-repeat
    display inline-block
    width 170px
    height 41px
    float right

  nav
    position relative
    z-index 5

    ul 

      li
        position relative
        padding 5px
        font-weight bold
        margin-top 5px

      a
        transition color .5s
      
      li:hover
          background-color #ccc

      a:hover
        color #3B9295
    
  nav > ul > li
    float left
      
  nav > ul > li:hover ul
    display block
    opacity 1
    visibility visible

  nav > ul > li > ul
    position absolute
    top 30px
    left: 15px
    opacity 0
    visibility hidden
    background-color rgba(205, 205, 205, .9)
    -webkit-transition: all .5s ease
       -moz-transition: all .5s ease
        -ms-transition: all .5s ease
         -o-transition: all .5s ease
            transition: all .5s ease

.site-header nav > ul > li > ul 

  > li
    padding 0 5px 5px 5px
    font-weight normal
    background-color #ccc
    transition background-color .5s

  > li:hover
    color #fff
    background-color #3B9295

  a
    transition color .5s

  > li a:hover
    color #fff

.page-header
  height 40px
  background-color #e6e6e6
  padding 0px 25px 0 25px
  border-top 1px solid #ededed
  box-shadow 0 0 7px #444

  h2
    margin 0
    float left
    display inline-block

  span
    font-size 18pt
    float right
    font-weight bold

    a
      transition color .5s

    a:hover
      color #3B9295  
      text-decoration none

.error.icon-message > .container > img
    opacity .4

#disconnected
  display none
  background: #f00
  border-radius 5px
  color #fff
  padding 10px
  font-size 20px
  position absolute
  width 40%
  margin auto
  left 5%
  top 5%
  z-index 1000

#main-container
  width 1920px
  height 980px
  padding (gutter/2)
  transform-origin 0 0
  margin 60 auto 0

  &.disconnected
    opacity .3

  #dashboard-list
    width 100%
    ul
        list-style none
        padding 0
    li
        background #e6e6e6
        color #000
        padding (gutter / 2)
        margin (gutter / 2)
        border-radius (gutter / 8)
        box-shadow 0 0 5px #444
        overflow hidden
        float left
        width 23%
        font-size 2em
        a
            text-decoration none
            color #000
            text-transform uppercase

  #widgets-container

      clear both

      & > ul
          list-style none
          padding 0

          & > li
            background #e6e6e6
            color #000
            padding (gutter / 2)
            //border-radius (gutter / 8)
            box-shadow 0 0 7px #444
            overflow hidden

            &.editing
               z-index 32767
               box-shadow 0 0 15px #333

            &:hover .edit
                display block

            .content
              &.offline, &.onerror
                opacity 0.2

            .edit
                display none
                width 20px
                height 20px
                position absolute
                top (gutter/2)
                right  (gutter/2)
                border none
                text-indent -9999px
                background transparent no-repeat unquote('url(dataimage/pngbase64,)')

      &.loading
         color #333

        h2
            font-size base-font-size
            // Stylus is trying to be damn too clever.
            margin-top 0
            margin-left -(gutter/2)
            margin-right -(gutter/2)
            margin-bottom (gutter/2)
            padding 0 (gutter/2) 0 (gutter/2)
            text-transform uppercase
            color black
            line-height 90%
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap

big
     color #fff
     font-size base-font-size * 2
     font-weight bold

.error
  color red
  font-size base-font-size

.error-display
    display none
    padding-left 20px
    padding-bottom 3px

.error-display.show
    display inline !important

.widget-title span.alert
  text-transform lowercase
  font-size 80%
  opacity 0.8


.widget-title span.alert_low
  color yellow

.widget-container
  width 100%

.widget-title span.alert_high
  color red

